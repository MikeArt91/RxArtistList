<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/cardview_dark_background"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UseCompoundDrawables"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/lv_row_padding"
    android:background="?android:attr/selectableItemBackground"
    >

  <ImageView
      android:id="@+id/avatar"
      android:layout_width="@dimen/lv_row_icon_width"
      android:layout_height="@dimen/lv_row_icon_width"
      android:paddingLeft="@dimen/lv_row_icon_padding"
      android:paddingRight="@dimen/lv_row_icon_padding"
      android:contentDescription="@string/string_content_description"
      />

  <TextView
      android:id="@+id/name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="@id/avatar"
      android:layout_toRightOf="@id/avatar"
      android:layout_toEndOf="@id/avatar"
      android:layout_marginTop="5dp"
      android:layout_marginStart="5dp"
      android:layout_marginLeft="5dp"
      android:textSize="@dimen/lv_row_name_size"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/genres"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/name"
      android:layout_toRightOf="@id/avatar"
      android:layout_toEndOf="@id/avatar"
      android:layout_alignStart="@id/name"
      android:layout_alignLeft="@id/name"
      android:textSize="@dimen/lv_row_text_size"
      />

  <TextView
      android:id="@+id/albntracks"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/avatar"
      android:layout_toRightOf="@id/avatar"
      android:layout_toEndOf="@id/avatar"
      android:layout_alignStart="@id/name"
      android:layout_alignLeft="@id/name"
      android:layout_marginBottom="10dp"
      android:textSize="@dimen/lv_row_text_size"
/>

</RelativeLayout>

</android.support.v7.widget.CardView>